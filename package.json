{
  "name": "angular-firebase-authentication-across-subdomains",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "serve": "npm-run-all -p serve:functions start dev:ssr",
    "serve:functions": "npm run --prefix functions serve",
    "start": "npm run start:checkout",
    "start:checkout": "ng serve --project checkout",
    "dev:ssr": "npm-run-all -p dev:ssr:account dev:ssr:experiences",
    "dev:ssr:account": "ng run account:serve-ssr --port 5202",
    "dev:ssr:experiences": "ng run experiences:serve-ssr --port 4201",
    "build": "npm-run-all -p build:csr build:ssr && npm run --prefix functions build",
    "build:csr": "npm run build:csr:checkout",
    "build:csr:checkout": "ng build --project checkout",
    "build:ssr": "npm-run-all -p build:ssr:account build:ssr:experiences",
    "build:ssr:account": "ng build --project account && ng run account:server && npm run --prefix functions copy:account",
    "build:ssr:experiences": "ng build --project experiences && ng run experiences:server && npm run --prefix functions copy:experiences",
    "build:functions": "npm run --prefix functions build",
    "serve:ssr": "npm run serve:ssr:experiences",
    "serve:ssr:experiences": "export PORT=4201; node dist/experiences/server/main.js",
    "watch": "npm-run-all -p watch:account watch:experiences watch:checkout",
    "watch:account": "ng build --watch --project account --configuration development",
    "watch:experiences": "ng build --watch --project experiences --configuration development",
    "watch:checkout": "ng build --watch --project checkout --configuration development",
    "test": "ng test",
    "prerender": "ng run account:prerender"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.4.0",
    "@angular/common": "~13.4.0",
    "@angular/compiler": "~13.4.0",
    "@angular/core": "~13.4.0",
    "@angular/fire": "^7.6.1",
    "@angular/forms": "~13.4.0",
    "@angular/platform-browser": "~13.4.0",
    "@angular/platform-browser-dynamic": "~13.4.0",
    "@angular/platform-server": "~13.4.0",
    "@angular/router": "~13.4.0",
    "@nguniversal/express-engine": "^13.1.1",
    "express": "^4.15.2",
    "firebase": "^9.23.0",
    "rxfire": "^6.0.5",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.11",
    "@angular/cli": "~13.3.11",
    "@angular/compiler-cli": "~13.4.0",
    "@nguniversal/builders": "^13.1.1",
    "@types/express": "^4.17.0",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "firebase-tools": "^12.9.1",
    "jasmine-core": "~4.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~4.6.2"
  }
}

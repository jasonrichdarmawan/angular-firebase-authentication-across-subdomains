{
  "name": "angular-firebase-authentication-across-subdomains",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --project account | ng serve --project experiences | ng serve --project checkout",
    
    "build": "npm run build:ssr && npm run build:functions",

    "build:functions": "npm run --prefix functions build",
    
    "build:ssr": "npm run build:ssr:account | npm run build:ssr:experiences | npm run build:ssr:checkout ",
    "build:ssr:account": "ng build --project account && ng run account:server",
    "build:ssr:experiences": "ng build --project experiences && ng run experiences:server",
    "build:ssr:checkout": "ng build --project checkout && ng run checkout:server",

    "watch": "ng build --watch --configuration development",
    "test": "ng test",

    "dev:ssr": "npm run dev:ssr:account | npm run dev:ssr:experiences | npm run dev:ssr:checkout",
    "dev:ssr:account": "ng run account:serve-ssr --port 4200",
    "dev:ssr:experiences": "ng run experiences:serve-ssr --port 4201",
    "dev:ssr:checkout": "ng run checkout:serve-ssr --port 4202",

    "serve:ssr": "npm run serve:ssr:account | npm run serve:ssr:experiences | npm run serve:ssr:checkout",
    "serve:ssr:account": "export PORT=4200; node dist/account/server/main.js",
    "serve:ssr:experiences": "export PORT=4201; node dist/experiences/server/main.js",
    "serve:ssr:checkout": "export PORT=4202; node dist/checkout/server/main.js",
    
    "prerender": "ng run account:prerender"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.4.0",
    "@angular/common": "~13.4.0",
    "@angular/compiler": "~13.4.0",
    "@angular/core": "~13.4.0",
    "@angular/forms": "~13.4.0",
    "@angular/platform-browser": "~13.4.0",
    "@angular/platform-browser-dynamic": "~13.4.0",
    "@angular/platform-server": "~13.4.0",
    "@angular/router": "~13.4.0",
    "@nguniversal/express-engine": "^13.1.1",
    "express": "^4.15.2",
    "firebase": "^10.7.1",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.11",
    "@angular/cli": "~13.3.11",
    "@angular/compiler-cli": "~13.4.0",
    "@nguniversal/builders": "^13.1.1",
    "@types/express": "^4.17.0",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "jasmine-core": "~4.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~4.6.2"
  }
}